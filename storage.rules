rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to resume and project images
    match /Saurabh_Tiwari_Resume.pdf {
      allow read: if true;
    }
    match /projects/{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated admin users to write any files
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
