rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for all portfolio content
    match /meta/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only
    }
    match /skills/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only
    }
    match /experience/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only
    }
    match /projects/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // Admin only
    }
    
    // Allow anyone to submit a message to the contact form
    match /messages/{messageId} {
      allow read: if request.auth != null; // Admin only
      allow create: if true;
      allow update, delete: if request.auth != null; // Admin only
    }
  }
}
